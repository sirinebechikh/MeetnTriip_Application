{% extends 'admin.html.twig' %}

{% block body %}
    <div class="content-page">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Modifier une réponse</h5>

                                <!-- Formulaire de mise à jour de la réponse -->
                                {% form_theme form 'bootstrap_4_layout.html.twig' %}
                                <div class="card-body">
                                    <h5 class="card-title">Modifier une réponse</h5>
                                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                                        <!-- Contenu de votre formulaire ici -->
                                    {{ form_end(form) }}
                                </div>
                                <!-- Fin du formulaire de mise à jour de la réponse -->

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
