{% extends 'admin.html.twig' %}

{% block body %}
<div class="content-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Liste des réclamations</h5>

                            <form action="{{ path('afficher_reclamation') }}" method="GET" class="row">
                                <div class="col-md-4">
                                    <label for="search">Rechercher par nom, type ou commentaire :</label>
                                    <input type="text" class="form-control" id="search" name="search" value="{{ app.request.query.get('search') }}">
                                </div>
                                <div class="col-md-4">
                                    <label for="type_filter">Filtrer par type :</label>
                                    <select name="type_filter" class="form-control">
                                        <option value="">-- Tous les types --</option>
                                        {% for type in types %}
                                            <option value="{{ type }}" {% if app.request.query.get('type_filter') == type %}selected{% endif %}>{{ type }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-4 d-flex align-items-end gap-2">
                                    <button type="submit" class="btn btn-success">Rechercher</button>
                                    {% set selectedType = app.request.query.get('type_filter') %}
                                    {% if selectedType %}
                                        <a href="{{ path('pdf_reclamation', {'type': selectedType}) }}" class="btn btn-danger">Exporter PDF</a>
                                    {% endif %}
                                </div>
                            </form>

                            {% for recl in Reclamation %}
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <h5 class="card-title">Nom: {{ recl.name }}</h5>
                                        <h6 class="card-subtitle mb-2 text-muted">Date: {{ recl.updated|date('d-m-Y') }}</h6>
                                        <p class="card-text">Type: {{ recl.type }}</p>
                                        <p class="card-text">Commentaire: {{ recl.commentaire }}</p>
                                        <img src="{{ asset('uploads/images/' ~ recl.image) }}" style="width:300px; height:300px;" />
                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <a class="btn btn-danger" href="{{ path('delete_ab', {'id': recl.id}) }}">Supprimer</a>
                                            <a class="btn btn-success" href="{{ path('update_ab', {'id': recl.id}) }}">mise à jour</a>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <p>Aucune réclamation trouvée.</p>
                            {% endfor %}

                            <!-- Pagination -->
                            <div class="pagination">
                                {% set currentPage = Reclamation.currentPageNumber %}
                                {% set previous = currentPage > 1 ? currentPage - 1 : false %}
                                {% set next = currentPage < Reclamation.pageCount ? currentPage + 1 : false %}
                                <ul class="pagination">
                                    {% if previous %}
                                        <li class="page-item">
                                            <a class="page-link" href="{{ path('afficher_reclamation') }}?page={{ previous }}">Précédent</a>
                                        </li>
                                    {% endif %}
                                    <li class="page-item active">
                                        <span class="page-link">{{ currentPage }}</span>
                                    </li>
                                    {% if next %}
                                        <li class="page-item">
                                            <a class="page-link" href="{{ path('afficher_reclamation') }}?page={{ next }}">Suivant</a>
                                        </li>
                                    {% endif %}
                                </ul>
                            </div>
                            <!-- Fin pagination -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
